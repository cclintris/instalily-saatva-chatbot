{
  "manifest_version": 3,
  "name": "SaatvaAI",
  "version": "1.0",
  "description": "SaatvaAI, an AI powered chrome extension to answer your questions about Saatva.com.",
  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "scripting",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "icons": {
    "16": "images/logo.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "action": {
    "default_title": "SaatvaAI - Your AI powered Companion"
  }
}